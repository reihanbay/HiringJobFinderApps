<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingVertical="24dp"
    tools:context=".Login">

    <TextView
        android:id="@+id/tv_header_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:paddingHorizontal="24dp"
        android:text="@string/completed_data_form"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#888888"/>

    <TextView
        android:id="@+id/tv_fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:text="Fullname"
        android:textSize="16sp"
        android:textColor="#ABABAB"/>
    <EditText
        android:id="@+id/et_fullname"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="24dp"
        android:inputType="textPersonName"
        android:hint="Input your name..."
        android:textSize="16sp"
        android:textColor="#888888"
        android:textColorHint="#DDDDDD"
        android:paddingStart="24dp"
        android:background="@drawable/et_rounded"
        android:elevation="2dp"
        />

    <TextView
        android:id="@+id/tv_birth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:text="Birth"
        android:textSize="16sp"
        android:textColor="#ABABAB"/>

    <EditText
        android:id="@+id/et_birth"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="24dp"
        android:inputType="date"
        android:hint="Input your birth..."
        android:textSize="16sp"
        android:textColor="#888888"
        android:textColorHint="#DDDDDD"
        android:paddingStart="24dp"
        android:background="@drawable/et_rounded"
        android:elevation="2dp"
        />

    <TextView
        android:id="@+id/tv_expertise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:text="Expertise"
        android:textSize="16sp"
        android:textColor="#ABABAB"/>

    <EditText
        android:id="@+id/et_expertise"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="24dp"
        android:inputType="text"
        android:hint="Input your job stack"
        android:textColor="#888888"
        android:textSize="16sp"
        android:textColorHint="#DDDDDD"
        android:paddingStart="24dp"
        android:background="@drawable/et_rounded"
        android:elevation="2dp"
        />

    <TextView
        android:id="@+id/tv_skill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:text="Skill"
        android:textSize="16sp"
        android:textColor="#ABABAB"/>

    <EditText
        android:id="@+id/et_skill"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="24dp"
        android:inputType="text"
        android:hint="Input Your Skill..."
        android:textColor="#888888"
        android:textSize="16sp"
        android:textColorHint="#DDDDDD"
        android:paddingStart="24dp"
        android:background="@drawable/et_rounded"
        android:elevation="2dp"
        />

    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:text="Description"
        android:textSize="16sp"
        android:textColor="#ABABAB"/>

    <EditText
        android:id="@+id/et_summary"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="24dp"
        android:inputType="textMultiLine"
        android:hint="Describe your work experience"
        android:textColorHint="#888888"
        android:textSize="16sp"
        android:textColor="#DDDDDD"
        android:paddingStart="24dp"
        android:background="@drawable/et_rounded"
        android:elevation="2dp"
        />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="56dp"
        android:text="@string/save"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/btn_primary"/>

</LinearLayout>