<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingVertical="24dp"
        tools:context=".Login">

        <TextView
            android:id="@+id/tv_header_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:text="@string/completed_data_form"
            android:textAlignment="textStart"
            android:textColor="#888888"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_fullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            android:text="Fullname"
            android:textColor="#ABABAB"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_fullname"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/et_rounded"
            android:elevation="2dp"
            android:hint="Input your name..."
            android:inputType="textPersonName"
            android:paddingStart="24dp"
            android:textColor="#888888"
            android:textColorHint="#DDDDDD"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            android:text="Birth"
            android:textColor="#ABABAB"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_birth"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/et_rounded"
            android:elevation="2dp"
            android:hint="Input your birth..."
            android:inputType="date"
            android:paddingStart="24dp"
            android:textColor="#888888"
            android:textColorHint="#DDDDDD"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_expertise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            android:text="Expertise"
            android:textColor="#ABABAB"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_expertise"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/et_rounded"
            android:elevation="2dp"
            android:hint="Input your job stack"
            android:inputType="text"
            android:paddingStart="24dp"
            android:textColor="#888888"
            android:textColorHint="#DDDDDD"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_skill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            android:text="Skill"
            android:textColor="#ABABAB"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_skill"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/et_rounded"
            android:elevation="2dp"
            android:hint="Input Your Skill..."
            android:inputType="text"
            android:paddingStart="24dp"
            android:textColor="#888888"
            android:textColorHint="#DDDDDD"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            android:text="Description"
            android:textColor="#ABABAB"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_summary"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/et_rounded"
            android:elevation="2dp"
            android:hint="Describe your work experience"
            android:inputType="textMultiLine"
            android:paddingStart="24dp"
            android:textColor="#888888"
            android:textColorHint="#DDDDDD"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="56dp"
            android:background="@drawable/btn_primary"
            android:text="@string/save"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>
</layout>
